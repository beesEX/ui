extends layout

block content
  .row
    .col-lg-5
      div
        div ORDER-REPLAY
        input#csrf(type='hidden', name='_csrf', value=_csrf)
        select#side
          option(value="ask") ASK
          option(value="bid") BID
        select#api
          option(value="gdax") gdax
          option(value="gemini") gemini
        button#controlBtn(onclick="toogleConnection()") start
      ul#orderList

    .col-lg-2
      div
        button#reset(onclick="reset()") RESET!!
        ul#resetResult
    .col-lg-5
      div.clearfix
        div.float-left
          label Currency:
          select#currency
            option(value="BTC") BTC
            option(value="USDT") USDT
          button#loadStatusBtn(onclick="loadFinanceStatus()") Refresh
        dev.float-left(style="margin-right:10px;")
          label Balance:
          span#balance
        dev.float-left
          label Available:
          span#available
        dev.float-right
          label Deposit:
          input#amount(style="width:100px;")
          button#depositBtn(onclick="depositFund()") Deposit
      dev#txList
  script(src="/js/order-replay/index.js")
